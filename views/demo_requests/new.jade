extends ../layout

//block body
   form#formAddDemoRequest(name="addDemoRequest",method="post",action="/demo_requests")
      p email:
         input#inputEmail(type='email', placeholder="you@company.com", name="email")
      p subscriptions:
         input#inputSubscriptions(type="text", name="subscriptions")
      p Newsletter?:
         input#inputNewsletter(type="checkbox", name="newsletter")
      p
         button#btnSubmit(type="submit") submit

block body
    .container
        br
        br
        h1 Request a Product Demonstration
        br
        form.form-horizontal(role='form', name="addDemoRequest", method="post", action="/demo_requests")
            .form-group
                label.control-label.col-sm-2 First Name:
                .col-sm-4
                    input.form-control(type='text', name="first_name", rows=5, placeholder='')
                label.control-label.col-sm-2 Last Name:
                .col-sm-4
                    input.form-control(type='text', name="last_name", rows=5, placeholder='')
            .form-group
                label.control-label.col-sm-2 Company/Organization:
                .col-sm-4
                    input.form-control(type='text', name="company", rows=5, placeholder='')
                label.control-label.col-sm-2 Country:
                .col-sm-4
                    input.form-control(type='text', name="country", rows=5, placeholder='')
            .form-group
                label.control-label.col-sm-2(for='email') Email:
                .col-sm-4
                    input#email.form-control(type='email', name="email", placeholder='What is the best email address for us to contact you?')
                label.control-label.col-sm-2(for='phone') Phone Number:
                .col-sm-4
                    input#email.form-control(type='phone', name="phone_number", placeholder='Please provide your phone number with country code.')
            .form-group
                label.control-label.col-sm-2 Focus Area(s):
                .col-sm-10
                    input.form-control(type='text', name="priorities", rows=5, placeholder='What are your key priorities and areas of focus for using a venture data product?')
            .form-group
                label.control-label.col-sm-2 Data Subscriptions:
                .col-sm-10
                    input.form-control(type='text', name="subscriptions", rows=5, placeholder='Have you, or do you currently subscribe to other venture data products?')
            .form-group
                label.control-label.col-sm-2 Preferred Date:
                .col-sm-10
                    input#datetimepicker4.form-control(type='datepickerInput', name="pref_date", placeholder='What is the earliest date you would like to see the product?')
            .form-group
                label.control-label.col-sm-2 Other Info:
                .col-sm-10
                    textarea#other_info.form-control(name="other_info", rows=5, placeholder='Is there anything else we should know to help us better understand your needs?')
            .form-group
                .col-sm-offset-2.col-sm-2
                    button.btn.btn-default.btn-primary(type='submit') Submit
                    a(href='/')
                        button.btn(type="button") Cancel
                .col-sm-8
                    .checkbox
                        label
                            input(type='checkbox', name='newsletter')
                            |  Please add me to the GCV newsletter mailing list.
br
h4= info
